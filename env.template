# ============================================
# FITS E-commerce Platform - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git

# ============================================
# Next.js Configuration
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Database - Neon PostgreSQL
# ============================================
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require&channel_binding=require

# ============================================
# Authentication - Supabase
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# OAuth Provider Credentials
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# File Upload - UploadThing
# ============================================
UPLOADTHING_SECRET=sk_live_xxxxx
UPLOADTHING_APP_ID=your-app-id

# ============================================
# Email - Resend
# ============================================
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================
# Monitoring - Grafana Stack (Phase 5)
# ============================================
# Grafana Cloud, Loki, and Prometheus configuration
# Will be configured during Phase 5: Polish & Optimization

# ============================================
# Analytics - Vercel Analytics
# ============================================
# Enabled automatically on Vercel deployments
# No configuration needed

# ============================================
# App Configuration
# ============================================
NODE_ENV=development